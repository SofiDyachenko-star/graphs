
#include <iostream>
#include <climits>
using namespace std;

const int INF = INT_MAX / 2;
const int MAXN = 10;

int** create_graph(int n) {
    int** graph = new int*[n];
    for (int i = 0; i < n; i++) {
        graph[i] = new int[n];
        for (int j = 0; j < n; j++) graph[i][j] = INF;
        graph[i][i] = 0;
    }
    return graph;
}

void manual_graph(int** graph, int n) {
    graph[0][1] = 1; graph[1][0] = 1;
    graph[1][2] = 2; graph[2][1] = 2;
    graph[2][3] = 1; graph[3][2] = 1;
    graph[0][3] = 4; graph[3][0] = 4;
}

void floyd(int** graph, int n) {
    for (int k = 0; k < n; k++)
        for (int i = 0; i < n; i++)
            for (int j = 0; j < n; j++)
                if (graph[i][k] < INF && graph[k][j] < INF &&
                    graph[i][j] > graph[i][k] + graph[k][j])
                    graph[i][j] = graph[i][k] + graph[k][j];
}

int graph_center(int** dist, int n) {
    int best = -1;
    int bestEcc = INF;
    
    for (int i = 0; i < n; i++) {
        int ecc = 0;
        for (int j = 0; j < n; j++)
            if (dist[i][j] < INF)
                ecc = max(ecc, dist[i][j]);
        if (ecc < bestEcc) {
            bestEcc = ecc;
            best = i;
        }
    }
    return best;
}

void delete_graph(int** graph, int n) {
    for (int i = 0; i < n; i++) delete[] graph[i];
    delete[] graph;
}

int main() {
    int n = 4;
    int** graph = create_graph(n);
    manual_graph(graph, n);

    floyd(graph, n);
    
    cout << "Матрица кратчайших расстояний:\n";
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            cout << (graph[i][j] >= INF ? "INF " : to_string(graph[i][j]) + " ");
        }
        cout << "\n";
    }
    
    int center = graph_center(graph, n);
    cout << "\nЦентр графа: вершина " << center << "\n";
    
    delete_graph(graph, n);
}
