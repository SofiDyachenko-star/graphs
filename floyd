

#include <iostream>
#include <cstdlib> // для рандома
//#include <climits>  для лимита

using namespace std;

int** create_graph(int n){
    int** graph = new int* [n];
    
    for (int i = 0; i < n; i++ ){
        graph[i] = new int [n];
    }
    return graph;
}

int** full_graph(int** graph, int n){
    for (int i = 0; i < n; i++){
        for (int j = 0; j < n; j++){
            if (i != j){
                graph[i][j] = rand()%10 + 1;
                graph[j][i] = graph[i][j];
            }
            else{
                graph[i][j] = 0;
            }
        }
    }
    return graph;
   
}



void print(int** graph, int n){
    for (int i = 0; i < n; i++){
        for (int j = 0; j < n; j++){
            cout << graph[i][j] << " ";
        }
        cout << "\n";
    }
    
    
}


int** floyd(int** graph, int n){
    for (int k = 0; k < n; k++){
        for (int i = 0; i < n; i++){
            for (int j = 0; j < n; j++){
                //if(graph[i][k] < INT_MAX && graph[k][j] < INT_MAX) {
                    if(graph [i][j] > graph[i][k] + graph[k][j]){
                        graph[i][j] = graph[i][k] + graph[k][j];
                    
                }
            }
        }
    }
    return (graph);
}

void delete_graph(int** graph, int n) {
    
    for (int i = 0; i < n; i++) {
        delete[] graph[i];
    }
    delete[] graph;
}


int main(){
    int n;
    
    cin >> n;
    
    int** graph = create_graph(n);
    full_graph(graph, n);
    cout << "до:\n";
    print(graph, n);
    floyd(graph, n);
    cout << "---------\n";
    cout << "после:\n";
    print(graph, n);
    delete_graph(graph, n);
 
        
    
}
